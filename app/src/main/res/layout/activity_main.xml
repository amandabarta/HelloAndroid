<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/udacity"
    android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Udacity"
        android:layout_marginTop="8dp"
        android:textSize="35sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jobs of Tomorrow Start Here"
        android:layout_below="@id/heading"
        android:layout_marginTop="6dp"
        android:textSize="25sp"
        android:paddingBottom="6dp"/>
    <TextView
        android:id="@+id/addressLineOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2465 Latham St"
        android:layout_below="@id/paragraph"
        android:paddingTop="4dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/addressLineTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mountain View, CA 94043"
        android:layout_below="@id/addressLineOne"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/addressLineThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="650-555-5555"
        android:layout_below="@id/addressLineTwo"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/learnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn more:"
        android:layout_below="@id/addressLineThree"
        android:paddingTop="8dp"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/udacitySite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.udacity.com"
        android:layout_below="@id/learnMore"
        android:textSize="18sp"/>
</RelativeLayout>